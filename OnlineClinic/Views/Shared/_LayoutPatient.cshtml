<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">
    <link rel="shortcut icon" type="image/x-icon" href="~/assets2/img/favicon.ico">
    <title>پنل کاربری</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="~/assets2/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="~/assets2/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="~/assets2/css/style.css">    
</head>
@inject UserManager<OnlineClinicUser> userManager
@{
    var user = await userManager.FindByNameAsync(User.Identity.Name);
}
<body>
    <div class="header">
        <div class="header-left">
            <a asp-action="PatientAccountInfo" asp-controller="DoctorPanel" class="logo">
                <img src="~/assets2/img/logo.png" width="35" height="35" alt=""> <span>پنل کاربری</span>
            </a>
        </div>
        <a id="toggle_btn" href="javascript:void(0);"><i class="fa fa-bars"></i></a>
        <a id="mobile_btn" class="mobile_btn float-left" href="#sidebar"><i class="fa fa-bars"></i></a>
        <ul class="nav user-menu float-right">
            <li class="nav-item dropdown has-arrow">
                <a href="#" class="dropdown-toggle nav-link user-link" data-toggle="dropdown">                    
                    <span>@user.name</span>
                </a>
                <div class="dropdown-menu">
                    <a class="dropdown-item" asp-action="EditProfile" asp-controller="PatientPanel">ویرایش حساب کاربری</a>
                    <a class="dropdown-item" asp-action="ChangePassword" asp-controller="PatientPanel">تغییر رمز عبور</a>
                    <a class="dropdown-item" asp-action="Logout" asp-controller="Account">خروج</a>
                </div>
            </li>
        </ul>
        <div class="dropdown mobile-user-menu float-right">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-ellipsis-v"></i></a>
            <div class="dropdown-menu dropdown-menu-right">
                <a class="dropdown-item" asp-action="EditProfile" asp-controller="PatientPanel">ویرایش حساب کاربری</a>
                <a class="dropdown-item" asp-action="ChangePassword" asp-controller="PatientPanel">تغییر رمز عبور</a>
                <a class="dropdown-item" href="login.html">خروج</a>
            </div>
        </div>
    </div>
    <div class="main-wrapper">
        <div class="sidebar" id="sidebar">
            <div class="sidebar-inner slimscroll">
                <div id="sidebar-menu" class="sidebar-menu">
                    <ul>
                        <li class="menu-title">پنل</li>                        
                        <li>
                            <a asp-action="PatientAccountInfo" asp-controller="PatientPanel"><i class="fa fa-dashboard"></i> <span>حساب کاربری</span></a>
                        </li>
                        <li>
                            <a asp-action="LastAppointments" asp-controller="PatientPanel"><i class="fa fa-dashboard"></i> <span>نوبت های دکتر </span></a>
                        </li>
                        <li>
                            <a asp-action="FileDetail" asp-controller="PatientPanel"><i class="fa fa-dashboard"></i> <span>پرونده پزشكی </span></a>
                        </li>
                        <li>
                            <a asp-action="AllPosts" asp-controller="PatientPanel"><i class="fa fa-book"></i> <span>مطالب وبلاگی</span></a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        @RenderBody()
    </div>
    <div class="sidebar-overlay" data-reff=""></div>
    <script src="~/assets2/js/jquery-3.2.1.min.js"></script>
    <script src="~/assets2/js/popper.min.js"></script>
    <script src="~/assets2/js/bootstrap.min.js"></script>
    <script src="~/assets2/js/jquery.slimscroll.js"></script>
    <script src="~/assets2/js/Chart.bundle.js"></script>
    <script src="~/assets2/js/chart.js"></script>
    <script src="~/assets2/js/app.js"></script>
</body>
</html>
