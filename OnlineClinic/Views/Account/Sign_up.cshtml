@model RegisterViewModel
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
<div class="signup-area ptb-100">
    <div class="container">
        <div class="signup-form">
            <h3>حساب کاربری خودت بساز</h3>
            <form asp-action="RegisterConfirm" asp-controller="Account" method="post" enctype="multipart/form-data">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="form-group">
                            <input type="email" asp-for="username" class="form-control" placeholder="ایمیل">
                            <span asp-validation-for="username"></span>
                        </div>
                    </div>

                    <div class="col-lg-12">
                        <div class="form-group">
                            <input type="password" asp-for="password" class="form-control" placeholder="رمز عبور">
                            <span asp-validation-for="password"></span>
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div class="form-group">
                            <input type="password" asp-for="Repassword" class="form-control" placeholder="تكرار رمز عبور">
                            <span asp-validation-for="Repassword"></span>
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div class="form-group">
                            <input type="text" asp-for="name" class="form-control" placeholder="نام و نام خانوادگی">
                            <span asp-validation-for="name"></span>
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div class="send-btn">
                            <button class="default-btn">
                                ثبت نام
                                <span style="top: -5.5px; left: 33px;"></span>
                            </button>
                        </div>
                        <br>
                        <span>
                            حساب كاربريت فعال نشده؟
                            <a id="modal" href="#">
                            فعالش كن
                            </a>
                        </span>                        
                        <span>
                            قبلا ثبت نام کردی؟<a asp-action="Sign_in"
                            asp-controller="Account">وارد شو</a>
                        </span>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>




<div class="modal fade" id="myModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="ActivateAccount" asp-controller="Account">
                <div class="modal-header bg-primary">
                    <h4 class="modal-title">ارسال نام کاربری</h4>
                </div>
                <div class="modal-body">
                    <input class="form-control" name="username" />
                </div>
                <div class="modal-footer">
                    <button class="btn btn-danger">ارسال ایمیل</button>
                </div>
            </form>
        </div>
    </div>
</div>


<script>
    $(() => {
        $(modal).click(() => {
            $('#myModal').modal()
        })
    })
</script>