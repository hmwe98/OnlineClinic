@{
    Layout = "_LayoutDoctor";
}
@{
    var patient = ViewData["Patient"] as OnlineClinicUser;
    var DAT = ViewData["DAT"] as string;
}
@model MedicalFileViewModel
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
<style>    
    input::-webkit-outer-spin-button,
    input::-webkit-inner-spin-button {
        -webkit-appearance: none;
        margin: 0;
    }
</style>
<div class="page-wrapper" style="min-height: 351px;">
    <div class="content">
        <div class="row">
            <div class="col-md-12">
                <form asp-action="EditPatientConfirm">
                    <div class="card-box">
                        <div class="row allfontsize">
                            <div class="col-md-6">
                                <input type="hidden" value="@patient.Id" asp-for="patientId" />
                                <input type="hidden" value="@DAT" asp-for="DAT" />
                                <div class="form-group">
                                    <label>سن</label>
                                    <input inputmode="numeric" value="@patient.age"
                                           class="form-control" asp-for="age" />
                                    <span asp-validation-for="age"></span>
                                </div>
                                <div class="form-group">
                                    <label>سابقه بیماری خانوادگی</label>
                                    <textarea id="item" value="@patient.familyhistory" rows="5" cols="5" class="form-control"
                                              asp-for="familyhistory">                                    
                                    </textarea>
                                    <span asp-validation-for="familyhistory"></span>
                                </div>
                                <div class="form-group">
                                    <label>داروهای مصرفی</label>
                                    <textarea id="item3" value="@patient.medications" rows="5" cols="5" class="form-control"
                                              asp-for="medication">                                    
                                    </textarea>
                                    <span asp-validation-for="medication"></span>
                                </div>
                                <div class="form-group">
                                    <label>شرح معاینه بیمار</label>
                                    <textarea id="item5" value="@patient.medical_exam" rows="5" cols="5" class="form-control"
                                              asp-for="medical_exam">                                        
                                    </textarea>
                                    <span asp-validation-for="medical_exam"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>وضعیت تاهل</label>
                                    <input type="text" value="@patient.marital_status"
                                           class="form-control" asp-for="maritalstatus" />
                                    <span asp-validation-for="maritalstatus"></span>
                                </div>
                                <div class="form-group">
                                    <label>بیماری های گذشته</label>
                                    <textarea id="item2" value="@patient.pastDeseases" rows="5" cols="5" class="form-control"
                                              asp-for="pastdeseases">                                           
                                    </textarea>
                                    <span asp-validation-for="pastdeseases"></span>
                                </div>
                                <div class="form-group">
                                    <label>شرح حال بیمار</label>
                                    <textarea id="item4" value="@patient.history"
                                              rows="5" cols="5" class="form-control"
                                              asp-for="history">                                    
                                    </textarea>
                                    <span asp-validation-for="history"></span>
                                </div>
                                <div class="form-group">
                                    <label>پلن درمانی</label>
                                    <textarea id="item6" value="@patient.treatment"
                                              rows="5" cols="5" class="form-control"
                                              asp-for="treatment">                                    
                                    </textarea>
                                    <span asp-validation-for="treatment"></span>
                                </div>
                            </div>
                        </div>
                        <div class="text-right">
                            <button type="submit" class="btn btn-primary">ثبت</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script>
    $(function () {
        $(document).ready(function () {
            $("textarea").each(function () {
                var content = $(this).attr("value")
                $(this).html(`${content}`)
            })
        })
    })
</script>
