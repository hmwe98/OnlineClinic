@{
    Layout = "_LayoutPatient";
}
@model ChangePasswordViewModel
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
<div class="main-wrapper account-wrapper">
    <div class="account-page">
        <div class="account-center">
            <div class="account-box">
                <form class="form-signin" asp-action="ChangePasswordConfirm">
                    <div class="account-logo">
                        <img src="~/assets/img/logo-dark.png" alt="">
                    </div>
                    <div class="form-group">
                    </div>
                    <div class="form-group">
                        <label>رمز عبور فعلی</label>
                        <input asp-for="currentpassword" type="password" class="form-control" autofocus="">
                        <span asp-validation-for="currentpassword"></span>
                    </div>
                    <label>رمز عبور جدید</label>
                    <input asp-for="newpassword" type="password" class="form-control" autofocus="">
                    <span asp-validation-for="newpassword"></span>
                    <div class="form-group">
                        <label>تکرار رمز عبور جدید</label>
                        <input asp-for="repassword" type="password" class="form-control" autofocus="">
                        <span asp-validation-for="repassword"></span>
                    </div>
                    <div class="form-group text-center">
                        <button class="btn btn-primary account-btn" type="submit">تغییر رمز عبور</button>
                    </div>
                    <div class="text-center register-link">
                        <a asp-action="FutureVisits">برگشت به صفحه اصلی</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>