@{
    Layout = "_LayoutAdmin";
}
@{
    var post = ViewData["Post"] as BlogPost;
}
@model PostUpdateViewModel
<div class="page-wrapper" style="min-height: 702px;">
    <div class="content">
        <div class="row">
            <div class="col-lg-8 offset-lg-2">
                <h4 class="page-title">اضافه كردن مطلب</h4>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-8 offset-lg-2">
                <form method="post" enctype="multipart/form-data"
                      asp-action="PostEditConfirm1" asp-controller="Admin">
                    <div class="form-group">
                        <label>عنوان مطلب</label>
                        <input asp-for="Id" value="@post.Id" hidden />
                        <input value="@post.header" asp-for="header" class="form-control" type="text">
                    </div>
                    <div class="form-group">
                        <label>عكس مطلب</label>
                        <div>
                            <input asp-for="img" class="form-control" type="file">
                            <small class="form-text text-muted">حداكثر حجم عكس:5 مگابايت...فرمت عكس ها:JPG,PNG</small>
                        </div>
                    </div>
                    <div class="form-group">
                        <label>مقدمه</label>
                        <textarea id="txtarea" value="@post.shortstory" cols="30" rows="6" asp-for="shortstory" class="form-control"></textarea>
                    </div>
                    <div class="m-t-20 text-center">
                        <button class="btn btn-primary submit-btn">مرحله بعد</button>
                    </div>
                </form>
                <div class="m-t-20 text-center">
                    <a asp-action="RemovePost" asp-route-Id="@post.Id" class="btn btn-primary submit-btn">حذف پست</a>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.js"></script>
<script>
    $(()=>
    {
        $(document).ready(() => {
            var value = $(txtarea).attr("value")
            $(txtarea).html(value)
        })
    })
</script>