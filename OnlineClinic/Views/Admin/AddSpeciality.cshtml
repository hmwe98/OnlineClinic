@{
    Layout = "_LayoutAdmin";
}
<div class="page-wrapper" style="min-height: 612px;">
    <div class="content">
        <div class="row">
            <div class="col-sm-12">
                <h4 class="page-title">اضافه كردن تخصص پزشکی</h4>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="card-box">
                    <form asp-action="AddSpecialityConfirm" asp-controller="Admin">
                        <div class="form-group row">
                            <label class="col-md-3 col-form-label">نام تخصص جدید</label>
                            <div class="col-md-9">
                                <input type="text" class="form-control" name="speciality">
                            </div>
                        </div>                        
                        <div class="text-right">
                            <button type="submit" class="btn btn-primary">ثبت</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>