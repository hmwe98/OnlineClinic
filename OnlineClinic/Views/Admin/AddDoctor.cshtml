@{
    Layout = "_LayoutAdmin";
}
@{
    var SpecialityList = ViewData["SpecialityList"] as List<Speciality>;
}
@model AddDoctorOrAdminViewModel
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <div class="page-wrapper" style="min-height: 612px;">
        <div class="content">
            <div class="row">
                <div class="col-sm-12">
                    <h4 class="page-title">اضافه كردن دكتر</h4>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="card-box">
                        <form asp-action="AddDoctorConfirm" asp-controller="Admin">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group row">
                                        <label class="col-md-3 col-form-label">نام و نام خانوادگی</label>
                                        <div class="col-md-9">
                                            <input asp-for="name" type="text" class="form-control">
                                            <span asp-validation-for="name"></span>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-md-3 col-form-label">تخصص</label>
                                        <div class="col-md-9">
                                            <select asp-for="SpecialityId" class="custom-select optionfont">
                                                <option>انتخاب</option>
                                                @foreach (var item in SpecialityList)
                                                {
                                                    <option value="@item.Id">@item.name</option>
                                                }
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group row">
                                        <label class="col-md-3 col-form-label">نام کاربری</label>
                                        <div class="col-md-9">
                                            <input asp-for="username" type="text" class="form-control">
                                            <span asp-validation-for="username"></span>

                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-md-3 col-form-label">رمز عبور</label>
                                        <div class="col-md-9">
                                            <input asp-for="password" type="password" class="form-control">
                                            <span asp-validation-for="password"></span>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-md-3 col-form-label">تکرار رمز عبور</label>
                                        <div class="col-md-9">
                                            <input asp-for="repassword" type="password" class="form-control">
                                            <span asp-validation-for="repassword"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="text-right">
                                <button type="submit" class="btn btn-primary">ثبت</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>